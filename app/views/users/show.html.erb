<div class="page-header">
  <h3>User: <%= @user.username %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>email</dt>
      <dd><%= @user.email %></dd>

      <dt>Id</dt>
      <dd><%= @user.id %></dd>
    </dl>

  </div>

  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Photo</th>
        <th>Caption</th>
      </tr>
      <% @user.photos.each do |photo| %>
      <tr>
        <td><img src="<%= photo.image %>" class="img-responsive" width="300"></td>
        <td><%= photo.caption %></td>
      </tr>
      <% end %>
    </table>
  </div>

</div>
